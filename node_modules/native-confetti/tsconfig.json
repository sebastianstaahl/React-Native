{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "declarationDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./index.d.ts",
    "./node_modules"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./tests/output/**/*"
  ]
}
